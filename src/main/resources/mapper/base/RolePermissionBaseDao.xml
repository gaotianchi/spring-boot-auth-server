<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaotianchi.auth.infrastructure.dao.RolePermissionBaseDao">

    <resultMap type="com.gaotianchi.auth.infrastructure.entity.RolePermission" id="RolePermissionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleCode" column="role_code" jdbcType="INTEGER"/>
        <result property="permissionCode" column="permission_code" jdbcType="INTEGER"/>
    </resultMap>

    <insert id="insertRolePermission" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO role_permission(role_code, permission_code)
        VALUES (#{roleCode}, #{permissionCode})
    </insert>

    <insert id="insertRolePermissionsBatch" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO role_permission
        (role_code, permission_code)
        VALUES
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleCode}, #{entity.permissionCode})
        </foreach>
    </insert>

    <delete id="deleteRolePermissionById">
        DELETE
        FROM role_permission
        WHERE id = #{id}
    </delete>

    <delete id="deleteRolePermissionsBatchByIds">
        DELETE
        FROM role_permission
        WHERE id IN
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <update id="updateRolePermissionById">
        UPDATE role_permission
        <set>
            <if test="roleCode != null">
                role_code = #{roleCode},
            </if>
            <if test="permissionCode != null">
                permission_code = #{permissionCode},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <insert id="insertOrUpdateRolePermissionsBatch" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO role_permission
        (role_code, permission_code)
        VALUES
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleCode}, #{entity.permissionCode})
        </foreach>
        ON DUPLICATE KEY UPDATE
        role_code = VALUES(role_code)
        ,permission_code = VALUES(permission_code)
    </insert>

    <select id="selectRolePermissionById" resultMap="RolePermissionMap">
        SELECT id,
               role_code,
               permission_code
        FROM role_permission
        WHERE id = #{id}
    </select>

    <select id="selectRolePermissionsCount" resultType="java.lang.Long">
        SELECT count(1)
        FROM role_permission
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleCode != null">
                and role_code = #{roleCode}
            </if>
            <if test="permissionCode != null">
                and permission_code = #{permissionCode}
            </if>
        </where>
    </select>

    <select id="selectRolePermissionsByPage" resultMap="RolePermissionMap">
        SELECT
        id, role_code, permission_code
        FROM role_permission
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleCode != null">
                and role_code = #{roleCode}
            </if>
            <if test="permissionCode != null">
                and permission_code = #{permissionCode}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>
</mapper>

