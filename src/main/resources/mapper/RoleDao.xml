<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaotianchi.auth.dao.RoleDao">

    <resultMap type="com.gaotianchi.auth.repository.entity.Role" id="RoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="code" column="code" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="updatedAt" column="updated_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO role(code, name, description, created_at, updated_at)
        VALUES (#{code}, #{name}, #{description}, #{createdAt}, #{updatedAt})
    </insert>

    <delete id="deleteById">
        DELETE
        FROM role
        where id = #{id}
    </delete>

    <update id="update">
        UPDATE role
        <set>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="updatedAt != null">
                updated_at = #{updatedAt},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="selectById" resultMap="RoleMap">
        SELECT id,
               code,
               name,
               description,
               created_at,
               updated_at
        FROM role
        WHERE id = #{id}
    </select>
</mapper>

